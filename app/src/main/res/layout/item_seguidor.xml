<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="21dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="21dp"
    android:background="#171717">

    <LinearLayout
        android:id="@+id/layoutItemSeguidor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/objeto_buscador"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_user_seguidor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/foto1" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_seguidor"
                android:layout_width="wrap_content"
                android:layout_height="17sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="Name"
                android:textSize="14dp"
                android:textColor="#F9F4F1"
                android:fontFamily="@font/aileron_regular"/>

            <TextView
                android:id="@+id/username_seguidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:textSize="10dp"
                android:text="username"
                android:textColor="#F9F4F1"
                android:fontFamily="@font/aileron_regular"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="end">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/boton_eliminar_amigo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/boton_delete" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>