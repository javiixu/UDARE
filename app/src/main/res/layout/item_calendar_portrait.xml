<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <ImageView
        android:id="@+id/ivCalendarViewerPortrait"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:background="@drawable/rectangle_calendar_image"
        android:src="@drawable/reto_cocina_dummy"
        android:radius="40dp"
        android:translationZ="1dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvChallengeDateCalendarPortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_calendar_date"
        android:fontFamily="@font/cabinetgrotesk_regular"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:text="12 / 11 / 23 "
        android:textSize="15sp"
        android:textColor="#E7EE86"/>

    <ImageView
        android:id="@+id/ivCategoryIconCalendarPortrait"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:translationZ="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icono_cocina" />


</RelativeLayout>