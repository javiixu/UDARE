<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.PerfilActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/IdConstraintLayoutPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePicture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/perfil_ejemplo2"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.27" />


        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilePicture"
            app:layout_constraintVertical_bias="0.304" />

        <Button
            android:id="@+id/btnChangeProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="Change&#10;Picture"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toEndOf="@+id/profilePicture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.485" />

        <TextView
            android:id="@+id/tvContainerCookingCategory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/profile_category_square"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="RETOS COCINA"
            app:layout_constraintBottom_toTopOf="@+id/tvContainerSportCategory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline5"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/tvContainerSportCategory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/profile_category_square"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="RETOS DEPORTE"
            app:layout_constraintBottom_toTopOf="@+id/tvContainerCultureCategory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContainerCookingCategory" />

        <TextView
            android:id="@+id/tvContainerCultureCategory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/profile_category_square"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="RETOS CULTURA"
            app:layout_constraintBottom_toTopOf="@+id/tvContainerSocialCategory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContainerSportCategory" />

        <TextView
            android:id="@+id/tvContainerSocialCategory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/profile_category_square"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="RETOS SOCIAL"
            app:layout_constraintBottom_toTopOf="@+id/tvContainerGrowthCategory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContainerCultureCategory" />

        <TextView
            android:id="@+id/tvContainerGrowthCategory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/profile_category_square"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="RETOS CRECIMIENTO PERSONAL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContainerSocialCategory" />

        <TextView
            android:id="@+id/tvCookingPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvContainerCookingCategory"
            app:layout_constraintEnd_toEndOf="@+id/tvContainerCookingCategory"
            app:layout_constraintStart_toStartOf="@+id/tvContainerCookingCategory"
            app:layout_constraintTop_toTopOf="@+id/tvContainerCookingCategory" />

        <TextView
            android:id="@+id/tvCulturePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvContainerCultureCategory"
            app:layout_constraintEnd_toEndOf="@+id/tvContainerCultureCategory"
            app:layout_constraintStart_toStartOf="@+id/tvContainerCultureCategory"
            app:layout_constraintTop_toTopOf="@+id/tvContainerCultureCategory" />

        <TextView
            android:id="@+id/tvSportPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvContainerSportCategory"
            app:layout_constraintEnd_toEndOf="@+id/tvContainerSportCategory"
            app:layout_constraintStart_toStartOf="@+id/tvContainerSportCategory"
            app:layout_constraintTop_toTopOf="@+id/tvContainerSportCategory" />

        <TextView
            android:id="@+id/tvGrowthPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvContainerGrowthCategory"
            app:layout_constraintEnd_toEndOf="@+id/tvContainerGrowthCategory"
            app:layout_constraintStart_toStartOf="@+id/tvContainerGrowthCategory"
            app:layout_constraintTop_toTopOf="@+id/tvContainerGrowthCategory" />

        <TextView
            android:id="@+id/tvSocialPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvContainerSocialCategory"
            app:layout_constraintEnd_toEndOf="@+id/tvContainerSocialCategory"
            app:layout_constraintStart_toStartOf="@+id/tvContainerSocialCategory"
            app:layout_constraintTop_toTopOf="@+id/tvContainerSocialCategory" />

        <Button
            android:id="@+id/btnUserAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almbum"
            app:layout_constraintBottom_toTopOf="@+id/btnRankingFriends"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profilePicture"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnRankingFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranking"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profilePicture"
            app:layout_constraintTop_toBottomOf="@+id/btnUserAlbum" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="101dp" />

        <TextView
            android:id="@+id/tvUserBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

        <Button
            android:id="@+id/buttonFollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:text="200"
            android:textAlignment="textStart"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/buttonFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:text="100"
            android:textAlignment="textStart"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/buttonFollowers"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:text="Followers"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonFollowers"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="76dp"
            android:text="Following"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonFollowing"
            app:layout_constraintEnd_toStartOf="@+id/btnUserAlbum"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>